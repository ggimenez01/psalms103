<!-- app/views/your_controller_name/checkout.html.erb -->

<div class="customer-details">
  <h2>Customer Details</h2>

  <%= form_with(model: @order, url: orders_path, method: :post, id: "new-customer") do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
 
    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control", required: true %>
    </div>
 
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>
 
    <div class="form-group">
      <%= f.label :province_id %>
      <%= f.select :province_id, Province.all.map { |province| [province.name, province.id] }, { include_blank: true }, class: "form-control", required: true %>
    </div>

    <%= f.submit "Proceed to Checkout", class: "btn btn-primary" %>
  <% end %>
</div>
